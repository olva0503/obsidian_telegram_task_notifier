{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "noImplicitAny": true,
    "target": "ES2018",
    "allowJs": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"],
    "paths": {
      "obsidian": ["tests/obsidian.ts"]
    }
  },
  "include": ["*.ts", "tests/**/*.ts", "tests/**/*.d.ts", "vitest.config.ts"]
}
